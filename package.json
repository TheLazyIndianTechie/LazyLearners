{
  "name": "LazyLearners",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:critical": "jest --testPathPattern=__tests__/critical",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:video-streaming": "jest --testPathPattern=video-streaming",
    "test:a11y": "jest --testPathPattern=a11y",
    "test:e2e:a11y": "playwright test --grep @a11y",
    "test:accessibility": "npm run test:a11y && npm run test:e2e:a11y",
    "test:full-suite": "npm run test && npm run test:e2e",
    "lint:a11y": "eslint . --ext .tsx,.ts",
    "security:test": "npm audit && npm run lint",
    "security:test:comprehensive": "npm audit && npm run lint && npm run test:critical",
    "production:deploy": "vercel --prod",
    "production:verify": "curl -f https://gamelearn-platform.vercel.app/api/health || exit 1",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:minimal": "ts-node prisma/seed-minimal.ts",
    "db:reset": "ts-node scripts/db-reset.ts",
    "db:validate": "ts-node scripts/db-validate.ts",
    "db:refresh": "npm run db:reset && npm run db:seed"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.32.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.16.3",
    "@sentry/nextjs": "^10.12.0",
    "@tiptap/extension-placeholder": "^3.6.2",
    "@tiptap/react": "^3.6.2",
    "@tiptap/starter-kit": "^3.6.2",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "dompurify": "^3.2.7",
    "isomorphic-dompurify": "^2.28.0",
    "postcss": "^8.5.6",
    "react-dropzone": "^14.3.8",
    "svix": "^1.76.1",
    "swagger-ui-react": "^5.18.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.6.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest-axe": "^10.0.0",
    "prisma": "^6.16.3",
    "shadcn": "^3.3.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  }
}
